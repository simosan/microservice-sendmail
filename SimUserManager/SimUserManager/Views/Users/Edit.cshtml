@model SimUserManager.Models.UserViewModel

@{
    ViewData["Title"] = "ユーザ属性編集";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@if ( !ViewData.ModelState.IsValid && ViewData.ModelState["DBUpdateError"]!.Errors.Count > 0 )
{
    <div class="alert alert-danger">
        @Html.ValidationMessage("DBUpdateError")
    </div>
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label for="UserId" >ユーザID</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Lastname" >性</label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Firstname" >名</label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email" >E-Mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PositionName" >役職</label>
                <select asp-for="PositionName" class="form-control" asp-items="ViewBag.Opts1">
                    <option>役職名を選択</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Department" >部署名</label>
                <select asp-for="Department" class="form-control" asp-items="ViewBag.Opts2">
                    <option>部署名を選択</option>
                </select>
            </div>

            <partial name="_SectionFromDepList" />
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
